# Certificate distribution version information
OUR_CERTS_MAJOR_VERSION = 46
OUR_CERTS_MINOR_VERSION = 1
IGTF_CERTS_VERSION = 1.27
CERTS_DESCRIPTION = v$(OUR_CERTS_MAJOR_VERSION) (includes IGTF $(IGTF_CERTS_VERSION) CAs)

# Locations
ROOT = /p/vdt/public/html/
CERTS_DIR = $(ROOT)/software/certificates
TARBALL_NAME = certificates-$(OUR_CERTS_MAJOR_VERSION)-$(OUR_CERTS_MINOR_VERSION).tar.gz
TARBALL_PATH = $(CERTS_DIR)/$(OUR_CERTS_MAJOR_VERSION)/$(TARBALL_NAME)
WEB_PATH = http://vdt.cs.wisc.edu/software/certificates/$(OUR_CERTS_MAJOR_VERSION)/$(TARBALL_NAME)
